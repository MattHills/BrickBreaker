<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brickbreaker"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-feature android:glEsVersion="0x00020000" android:required="true" />
	<uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo">
        <activity
            android:name="ca.brocku.cosc.BrickBreaker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ca.brocku.cosc.BrickBreaker.Game"></activity>
         <activity   
            android:name="ca.brocku.cosc.BrickBreaker.BrickBreakerPreferencesActivity" 
            android:label="@string/preferences">
 		</activity>
         <activity android:name="ca.brocku.cosc.BrickBreaker.GameOver"></activity>
    </application>

</manifest>
